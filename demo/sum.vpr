predicate nonNeg(k: Int)
{
  0 <= k
}


method sum(n: Int) returns (res: Int)
  requires nonNeg(n) 
  ensures  res == n * (n + 1) / 2
{
  unfold nonNeg(n)
  res := 0
  var i: Int := 0;
  while(i <= n)
    invariant i <= (n + 1)
    invariant res == (i - 1) * i / 2
  {
    res := res + i
    i := i + 1
  }
  fold nonNeg(n)
}
